{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/renderer",
    "rootDir": "./src/renderer",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/renderer/**/*",
    "src/types/**/*"
  ]
}